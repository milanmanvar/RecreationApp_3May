<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <Switch
            android:id="@+id/searchinclude_switchMorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Morning Classes"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/searchinclude_switchLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="LunchTime Classes"
            android:textColor="@android:color/white" />

        <Switch
            android:id="@+id/searchinclude_switchEvening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Evening Classes"
            android:textColor="@android:color/white" />

    </LinearLayout>
</LinearLayout>