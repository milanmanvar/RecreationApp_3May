<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_welcome_iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/imag_logo" />

        <ImageView
            android:id="@+id/activity_welcome_iv_welcome_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_welcome_iv_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/img_welcom_to_rec_text" />


        <LinearLayout
            android:id="@+id/activity_welcome_ll_your_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_welcome_iv_welcome_image"
            android:layout_marginTop="50dp"

            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <EditText
                android:id="@+id/activity_welcome_et_your_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_name"
                android:drawablePadding="20dp"
                android:focusableInTouchMode="true"
                android:hint="@string/your_name_hint_txt"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white" />

        </LinearLayout>

        <View
            android:id="@+id/activity_welcome_line_your_name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/activity_welcome_ll_your_name"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/color_white_line" />

        <LinearLayout
            android:id="@+id/activity_welcome_ll_choose_your_club"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_welcome_line_your_name"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/ic_location_big" />

            <Button
                android:id="@+id/activity_welcome_et_choose_your_club"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="22dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:editable="false"
                android:gravity="left|center_vertical"
                android:text="@string/choose_your_club_hint_txt"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <View
            android:id="@+id/activity_welcome_line_choose_club"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/activity_welcome_ll_choose_your_club"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@color/color_white_line" />

        <ImageView
            android:id="@+id/activity_welcome_iv_cartoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_welcome_line_choose_club"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_cartoon" />

        <TextView
            android:id="@+id/activity_welcome_tv_lets_go"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/activity_welcome_iv_cartoon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_round_all_corner"
            android:gravity="center"
            android:text="@string/lets_go"
            android:textColor="@android:color/white"
            android:textSize="26sp" />


    </RelativeLayout>
</ScrollView>